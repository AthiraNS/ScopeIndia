           <script>
        $(document).ready(function () {
            $("button.ToggleFirstNameButton").click(function () {
                $("tr.ToggleFirstName").toggle();
             
            });
        });
        $(document).ready(function () {
            $("button.ToggleLastNameButton").click(function () {
            $("tr.ToggleLastName").toggle();
            });
        });
        $(document).ready(function () {
            $("button.ToggleCountryButton").click(function () {
                $("tr.ToggleCountry").toggle();
            });
        });
        $(document).ready(function () {
            $("button.ToggleStateButton").click(function () {
                $("tr.ToggleState").toggle();
            });
        });
        $(document).ready(function () {
            $("button.ToggleCityButton").click(function () {
                $("tr.ToggleCity").toggle();
            });
        });
        $(document).ready(function () {
            $("button.ToggleEmailButton").click(function () {
                $("tr.ToggleEmail").toggle();
            });
        });
        $(document).ready(function () {
            $("button.TogglePasswordButton").click(function () {
                $("tr.TogglePassword").toggle();
            });
        });
        $(document).ready(function () {
            $("button.ToggleCourseNameButton").click(function () {
                $("tr.ToggleCourseName").toggle();
            });
        });
        $(document).ready(function () {
            $("button.ToggleAvatarButton").click(function () {
                $("tr.ToggleAvatar").toggle();
            });
        });
        $(document).ready(function () {
            $("button.TogglePhoneButton").click(function () {
                $("tr.TogglePhone").toggle();
            });
        });
           </script>
             
        }
        